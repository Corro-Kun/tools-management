---
import Layout from "@/layouts/Layout.astro";
import Bar from "@/shared/components/Bar.astro";
---

<Layout>
  <main>
    <Bar />
    <div>
      <slot />
    </div>
  </main>
</Layout>

<style>
  main {
    height: 100vh;
    width: 100vw;
    display: flex;
  }
  div {
    padding: 20px;
    width: calc(100% - 200px);
  }
</style>
